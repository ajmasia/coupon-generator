{
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-eslint-rules"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  },
  "rules": {
    "no-shadowed-variable": false,
    "object-curly-spacing": [true, "always"],
    "jsx-no-lambda": false,
    "newline-before-return": true,
    "no-console": {
      "severity": "warning",
      "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
    }
  }
}
